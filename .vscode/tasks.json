{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake",
      "type": "shell",
      "command": "cmake",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "args": ["${workspaceFolder}"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Make",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    }
  ]
}
